<div class="banner-index" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= cl_image_path @category.image.key %>)">
  <h1><%= @category.name %></h1>
</div>

  <div class='info-top'>
    <h3>Recipes</h3>
    <%= link_to "Add a recipe", new_category_bookmark_path(@category), class: "btn btn-warning" %>
  </div>

<div class="cards-trip">
    <% @category.bookmarks.each do |bookmark| %>
    <div class="card-trip">
      <%= link_to bookmark_path(bookmark),
        data: {turbo_method: :delete,
          turbo_confirm: "Are you sure?" }, class: "btn btn-delete" do %>
      <i class="fa-solid fa-trash"></i>
      <% end %>
    <img src="<%= bookmark.recipe.image_url %>" alt="<%= bookmark.recipe.name %>" />
    <div class="card-trip-infos">
      <div>
        <h2><%= bookmark.recipe.name %></h2>
        <p><%= bookmark.recipe.description %></p>
        <div class="card-recipe-info">
          <h4><%= bookmark.comment %></h4>
          <p><%= bookmark.recipe.rating %></p>
         </div>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="footer">
  <br>
  <br>
</div>


